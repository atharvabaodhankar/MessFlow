rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Mess Owners collection - Public read (for PublicSearch to show mess name), owner can write
    match /messOwners/{ownerId} {
      allow read: if true; // Public read for displaying mess name to customers
      allow write: if request.auth != null && request.auth.uid == ownerId;
    }
    
    // Customers collection - Public read (for PublicSearch), owner can create/update/delete
    match /customers/{customerId} {
      allow read: if true; // Public read for customer self-service search
      allow create: if request.auth != null && request.auth.uid == request.resource.data.messId;
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.messId;
    }
    
    // Attendance collection - Only the mess owner can access attendance
    match /attendance/{attendanceId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.messId;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.messId;
    }
    
    // Plans collection - Only the mess owner can access their plans
    match /plans/{planId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.messId;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.messId;
    }
  }
}
